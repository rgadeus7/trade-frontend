{
  "indicatorCategories": {
    "trend": {
      "description": "Indicators that show overall trend direction",
      "indicators": ["sma", "ema", "macd", "adx", "priceAction", "gapAnalysis"],
      "statusValues": ["BULLISH", "BEARISH", "NEUTRAL"],
      "buySignal": "Majority of trend indicators are BULLISH",
      "sellSignal": "Majority of trend indicators are BEARISH"
    },
    "momentum": {
      "description": "Oscillators that show overbought/oversold conditions",
      "indicators": ["rsi", "stoch", "cci", "williamsR"],
      "statusValues": ["OVERBOUGHT", "OVERSOLD", "NEUTRAL"],
      "buySignal": "Momentum indicators show OVERSOLD conditions",
      "sellSignal": "Momentum indicators show OVERBOUGHT conditions"
    },
    "volatility": {
      "description": "Indicators that measure market volatility",
      "indicators": ["bollingerBands", "atr", "keltner", "donchian"],
      "statusValues": ["HIGH_VOLATILITY", "LOW_VOLATILITY", "NORMAL_VOLATILITY"],
      "buySignal": "Low volatility suggests potential breakout",
      "sellSignal": "High volatility suggests potential reversal"
    },
    "volume": {
      "description": "Volume-based indicators for confirmation",
      "indicators": ["volumeSma", "obv", "vwap", "moneyFlow"],
      "statusValues": ["HIGH_VOLUME", "LOW_VOLUME", "NORMAL_VOLUME"],
      "buySignal": "High volume confirms bullish moves",
      "sellSignal": "High volume confirms bearish moves"
    },
    "support_resistance": {
      "description": "Price levels that act as support or resistance",
      "indicators": ["pivotPoints", "fibonacci", "keyLevels"],
      "statusValues": ["ABOVE_RESISTANCE", "BELOW_SUPPORT", "NEAR_LEVEL", "BETWEEN_LEVELS"],
      "buySignal": "Price near support level",
      "sellSignal": "Price near resistance level"
    }
  },
  "indicators": {
    "sma": {
      "type": "trend",
      "periods": [20, 50, 89, 200],
      "strengthThreshold": 0.02,
      "description": "Simple Moving Average - trend direction indicator",
      "configurable": {
        "bullishThreshold": "Price > SMA",
        "bearishThreshold": "Price < SMA",
        "neutralThreshold": "Price within 0.5% of SMA"
      }
    },
    "ema": {
      "type": "trend",
      "periods": [12, 26, 50, 89],
      "strengthThreshold": 0.02,
      "description": "Exponential Moving Average - trend direction indicator",
      "configurable": {
        "bullishThreshold": "Price > EMA",
        "bearishThreshold": "Price < EMA",
        "neutralThreshold": "Price within 0.5% of EMA"
      }
    },
    "rsi": {
      "type": "momentum",
      "periods": [14, 21],
      "description": "Relative Strength Index - momentum oscillator",
      "configurable": {
        "overbought": {
          "strong": 80,
          "moderate": 70,
          "weak": 65
        },
        "oversold": {
          "strong": 20,
          "moderate": 30,
          "weak": 35
        },
        "neutral": {
          "upper": 65,
          "lower": 40
        }
      }
    },
    "bollingerBands": {
      "type": "volatility",
      "periods": [20, 50, 89],
      "stdDev": 2,
      "description": "Bollinger Bands - volatility and trend indicator",
      "configurable": {
        "overbought": "Price > Upper Band",
        "oversold": "Price < Lower Band",
        "neutral": "Price between bands",
        "squeeze": "Band width < 20% of middle band"
      }
    },
    "macd": {
      "type": "trend",
      "fastPeriod": 12,
      "slowPeriod": 26,
      "signalPeriod": 9,
      "description": "MACD - trend and momentum indicator",
      "configurable": {
        "bullish": "MACD > Signal Line",
        "bearish": "MACD < Signal Line",
        "strongBullish": "MACD > 0 and rising",
        "strongBearish": "MACD < 0 and falling"
      }
    },
    "stoch": {
      "type": "momentum",
      "kPeriod": 14,
      "dPeriod": 3,
      "description": "Stochastic Oscillator - momentum indicator",
      "configurable": {
        "overbought": {
          "strong": 90,
          "moderate": 80
        },
        "oversold": {
          "strong": 10,
          "moderate": 20
        }
      }
    },
    "volumeSma": {
      "type": "volume",
      "periods": [20, 50],
      "description": "Volume Simple Moving Average",
      "configurable": {
        "highVolume": "Current volume > 1.5x SMA",
        "lowVolume": "Current volume < 0.5x SMA",
        "normalVolume": "Current volume between 0.5x and 1.5x SMA"
      }
    },
    "vwap": {
      "type": "volume",
      "description": "Volume Weighted Average Price",
      "configurable": {
        "bullish": "Price > VWAP",
        "bearish": "Price < VWAP",
        "neutral": "Price within 0.2% of VWAP"
      }
    },
    "atr": {
      "type": "volatility",
      "periods": [14, 21],
      "description": "Average True Range - volatility indicator",
      "configurable": {
        "highVolatility": "ATR > 2x 20-period average",
        "lowVolatility": "ATR < 0.5x 20-period average",
        "normalVolatility": "ATR between 0.5x and 2x average"
      }
    },
    "adx": {
      "type": "trend",
      "period": 14,
      "description": "Average Directional Index - trend strength",
      "configurable": {
        "strongTrend": "ADX > 25",
        "weakTrend": "ADX < 20",
        "trending": "ADX > 20"
      }
    },
    "priceAction": {
      "type": "trend",
      "description": "Price action patterns and levels",
      "configurable": {
        "bullish": "Higher highs and higher lows",
        "bearish": "Lower highs and lower lows",
        "consolidation": "Sideways price action"
      }
    },
    "gapAnalysis": {
      "type": "trend",
      "description": "Gap analysis between sessions",
      "configurable": {
        "gapUp": "Open > Previous close by > 0.5%",
        "gapDown": "Open < Previous close by > 0.5%",
        "noGap": "Open within 0.5% of previous close"
      }
    }
  },
