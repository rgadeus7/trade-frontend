        "periods": {
          "daily": 10,
          "2hour": 10,
          "weekly": 5,
          "monthly": 3
        },
        "bullish": "High positive ROC indicating strong upward momentum",
        "bearish": "High negative ROC indicating strong downward momentum",
        "neutral": "Low ROC indicating weak momentum"
      }
    },
    "smaDistance": {
      "type": "delta-analysis",
      "description": "SMA Distance Analysis - measures how far price is from moving averages",
      "configurable": {
        "thresholds": {
          "daily": {
            "20": 0.05,
            "50": 0.08,
            "89": 0.12,
            "200": 0.20
          },
          "2hour": {
            "20": 0.03,
            "50": 0.05,
            "89": 0.08,
            "200": 0.15
          },
          "weekly": {
            "20": 0.08,
            "50": 0.12,
            "89": 0.18,
            "200": 0.25
          },
          "monthly": {
            "20": 0.12,
            "50": 0.18,
            "89": 0.25,
            "200": 0.35
          }
        },
        "bullish": "Price significantly above SMAs indicating strong uptrend",
        "bearish": "Price significantly below SMAs indicating strong downtrend",
        "neutral": "Price near SMAs indicating consolidation"
      }
    }
