{
  "indicatorCategories": {
    "technical": {
      "description": "Technical analysis indicators",
      "subcategories": {
        "directional": {
          "description": "Indicators that show trend direction",
          "indicators": ["sma", "sma-low", "psar"],
          "statusValues": ["BULLISH", "BEARISH", "NEUTRAL"],
          "buySignal": "Price above moving averages or bullish trend",
          "sellSignal": "Price below moving averages or bearish trend"
        },
        "momentum": {
          "description": "Oscillators that show overbought/oversold conditions",
          "indicators": ["rsi"],
          "statusValues": ["OVERBOUGHT", "OVERSOLD", "NO_BIAS"],
          "buySignal": "Momentum indicators show OVERSOLD conditions",
          "sellSignal": "Momentum indicators show OVERBOUGHT conditions"
        },
        "volatility": {
          "description": "Indicators that measure market volatility",
          "indicators": ["bollingerBands", "atr"],
          "statusValues": ["OVERBOUGHT", "OVERSOLD", "NO_BIAS"],
          "buySignal": "Low volatility suggests potential breakout",
          "sellSignal": "High volatility suggests potential reversal"
        },
        "volume": {
          "description": "Volume-based indicators for market analysis",
          "indicators": ["vwap", "volumeProfile"],
          "statusValues": ["BULLISH", "BEARISH", "NO_BIAS"],
          "buySignal": "Price above VWAP with high volume",
          "sellSignal": "Price below VWAP with high volume"
        }
      }
    },
    "price-action": {
      "description": "Price action analysis",
      "subcategories": {
        "price-action": {
          "description": "Price action patterns and movements",
          "indicators": ["price-action", "openVsPreviousClose", "closeVsPreviousHigh"],
          "statusValues": ["BULLISH", "BEARISH"],
          "buySignal": "Price action shows bullish patterns",
          "sellSignal": "Price action shows bearish patterns"
        }
      }
    }
  },
  "indicators": {
    "sma": {
      "type": "trend",
      "periods": [20, 50, 89, 200],
      "strengthThreshold": 0.02,
      "description": "Simple Moving Average - trend direction indicator",
      "configurable": {
        "bullishThreshold": "Price > SMA",
        "bearishThreshold": "Price < SMA",
        "neutralThreshold": "Price within 0.5% of SMA"
      }
    },
    "ema": {
      "type": "trend",
      "periods": [12, 26, 50, 89],
      "strengthThreshold": 0.02,
      "description": "Exponential Moving Average - trend direction indicator",
      "configurable": {
        "bullishThreshold": "Price > EMA",
        "bearishThreshold": "Price < EMA",
        "neutralThreshold": "Price within 0.5% of EMA"
      }
    },
    "rsi": {
      "type": "momentum",
      "periods": [14, 21],
      "description": "Relative Strength Index - momentum oscillator",
      "configurable": {
        "overbought": {
          "strong": 80,
          "moderate": 70,
          "weak": 65
        },
        "oversold": {
          "strong": 20,
          "moderate": 30,
          "weak": 35
        },
        "neutral": {
          "upper": 65,
          "lower": 40
        }
      }
    },
    "bollingerBands": {
      "type": "volatility",
      "periods": [20, 50, 89],
      "stdDev": 2,
      "description": "Bollinger Bands - volatility and trend indicator",
      "configurable": {
        "overbought": "Price > Upper Band",
        "oversold": "Price < Lower Band",
        "neutral": "Price between bands",
        "squeeze": "Band width < 20% of middle band"
      }
    },
    "macd": {
      "type": "trend",
      "fastPeriod": 12,
      "slowPeriod": 26,
      "signalPeriod": 9,
      "description": "MACD - trend and momentum indicator",
      "configurable": {
        "bullish": "MACD > Signal Line",
        "bearish": "MACD < Signal Line",
        "strongBullish": "MACD > 0 and rising",
        "strongBearish": "MACD < 0 and falling"
      }
    },
    "stoch": {
      "type": "momentum",
      "kPeriod": 14,
      "dPeriod": 3,
      "description": "Stochastic Oscillator - momentum indicator",
      "configurable": {
        "overbought": {
          "strong": 90,
          "moderate": 80
        },
        "oversold": {
          "strong": 10,
          "moderate": 20
        }
      }
    },
    "volumeSma": {
      "type": "volume",
      "periods": [20, 50],
      "description": "Volume Simple Moving Average",
      "configurable": {
        "highVolume": "Current volume > 1.5x SMA",
        "lowVolume": "Current volume < 0.5x SMA",
        "normalVolume": "Current volume between 0.5x and 1.5x SMA"
      }
    },
    "atr": {
      "type": "volatility",
      "periods": [14, 21],
      "description": "Average True Range - volatility indicator",
      "configurable": {
        "highVolatility": "ATR > 2x 20-period average",
        "lowVolatility": "ATR < 0.5x 20-period average",
        "normalVolatility": "ATR between 0.5x and 2x average"
      }
    },
    "adx": {
      "type": "trend",
      "period": 14,
      "description": "Average Directional Index - trend strength",
      "configurable": {
        "strongTrend": "ADX > 25",
        "weakTrend": "ADX < 20",
        "trending": "ADX > 20"
      }
    },
    "priceAction": {
      "type": "trend",
      "description": "Price action patterns and levels",
      "configurable": {
        "bullish": "Higher highs and higher lows",
        "bearish": "Lower highs and lower lows",
        "consolidation": "Sideways price action"
      }
    },
    "gapAnalysis": {
      "type": "trend",
      "description": "Gap analysis between sessions",
      "configurable": {
        "gapUp": "Open > Previous close by > 0.5%",
        "gapDown": "Open < Previous close by > 0.5%",
        "noGap": "Open within 0.5% of previous close"
      }
    },
    "openVsPreviousClose": {
      "type": "trend",
      "description": "Open vs Previous Close comparison",
      "configurable": {
        "bullish": "Open > Previous Close",
        "bearish": "Open < Previous Close",
        "neutral": "Open = Previous Close"
      }
    },
    "closeVsPreviousHigh": {
      "type": "trend", 
      "description": "Close vs Previous High comparison",
      "configurable": {
        "bullish": "Close > Previous High",
        "bearish": "Close < Previous High",
        "neutral": "Close = Previous High"
      }
    },
    "vwap": {
      "type": "volume",
      "description": "Volume Weighted Average Price - key support/resistance level",
      "configurable": {
        "bullish": "Price > VWAP with above-average volume",
        "bearish": "Price < VWAP with above-average volume",
        "neutral": "Price near VWAP or low volume",
        "volumeThreshold": 1.2,
        "lookbackPeriod": 10
      }
    },
    "volumeProfile": {
      "type": "volume",
      "description": "Volume Profile - identifies high-volume price levels",
      "configurable": {
        "poc": "Point of Control - highest volume price level",
        "valueArea": "70% of volume within price range",
        "bullish": "Price above POC with volume confirmation",
        "bearish": "Price below POC with volume confirmation",
        "neutral": "Price at POC or low volume areas",
        "lookbackPeriod": 20
      }
    }
  },
  "signalLogic": {
    "buyConditions": {
      "primary": [
        "Majority of trend indicators are BULLISH",
        "Momentum indicators show OVERSOLD or NEUTRAL",
        "Volume confirms price action"
      ],
      "secondary": [
        "Price near support levels",
        "Low volatility suggesting potential breakout",
        "RSI between 30-70 (not overbought)"
      ],
      "strongBuy": [
        "All trend indicators BULLISH",
        "RSI < 40 (oversold)",
        "High volume confirmation",
        "Price at strong support"
      ]
    },
    "sellConditions": {
      "primary": [
        "Majority of trend indicators are BEARISH",
        "Momentum indicators show OVERBOUGHT or NEUTRAL",
        "Volume confirms price action"
      ],
      "secondary": [
        "Price near resistance levels",
        "High volatility suggesting potential reversal",
        "RSI between 30-70 (not oversold)"
      ],
      "strongSell": [
        "All trend indicators BEARISH",
        "RSI > 70 (overbought)",
        "High volume confirmation",
        "Price at strong resistance"
      ]
    },
    "neutralConditions": [
      "Mixed signals across categories",
      "Low volume suggesting lack of conviction",
      "Price in consolidation pattern",
      "Indicators showing conflicting signals"
    ]
  },
  "timeframeAnalysis": {
    "monthly": {
      "description": "Long-term trend analysis",
      "weight": 0.3,
      "indicators": ["sma", "ema", "macd", "adx"]
    },
    "weekly": {
      "description": "Medium-term trend analysis", 
      "weight": 0.25,
      "indicators": ["sma", "ema", "rsi", "bollingerBands", "macd"]
    },
    "daily": {
      "description": "Short-term trend analysis",
      "weight": 0.25,
      "indicators": ["sma", "ema", "rsi", "bollingerBands", "macd", "volumeSma", "vwap"]
    },
    "hourly": {
      "description": "Intraday analysis",
      "weight": 0.2,
      "indicators": ["sma", "rsi", "bollingerBands", "volumeSma", "vwap", "atr"]
    }
  },
  "riskManagement": {
    "stopLoss": {
      "percentage": 0.02,
      "atrMultiplier": 2,
      "supportLevel": true
    },
    "takeProfit": {
      "riskRewardRatio": 2,
      "resistanceLevel": true,
      "trailingStop": true
    },
    "positionSizing": {
      "maxRiskPerTrade": 0.02,
      "maxPortfolioRisk": 0.06
    }
  }
}
