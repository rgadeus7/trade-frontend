  "indicatorCategories": {
    "technical": {
      "description": "Technical analysis indicators",
      "subcategories": {
        "directional": {
          "description": "Indicators that show trend direction",
          "indicators": ["sma", "sma-low", "psar"],
          "statusValues": ["BULLISH", "BEARISH", "NEUTRAL"],
          "buySignal": "Price above moving averages or bullish trend",
          "sellSignal": "Price below moving averages or bearish trend"
        },
        "oscillators": {
          "description": "Oscillators that show overbought/oversold conditions",
          "indicators": ["rsi"],
          "statusValues": ["OVERBOUGHT", "OVERSOLD", "NO_BIAS"],
          "buySignal": "Momentum indicators show OVERSOLD conditions",
          "sellSignal": "Momentum indicators show OVERBOUGHT conditions"
        },
        "delta-analysis": {
          "description": "Rate of Change and SMA Distance analysis",
          "indicators": ["roc", "smaDistance"],
          "statusValues": ["BULLISH", "BEARISH", "NO_BIAS"],
          "buySignal": "High ROC and price significantly above SMAs",
          "sellSignal": "Low ROC and price significantly below SMAs"
        },
        "volatility": {
          "description": "Indicators that measure market volatility and support/resistance",
          "indicators": ["bollingerBands", "atr", "mmlOvershoot", "mmlOversold"],
          "statusValues": ["OVERBOUGHT", "OVERSOLD", "NO_BIAS"],
          "buySignal": "Low volatility suggests potential breakout",
          "sellSignal": "High volatility suggests potential reversal"
        },
        "support-resistance": {
          "description": "Support and resistance level analysis",
          "indicators": ["swingHighLow", "pivotPoints", "fibonacciRetracements", "horizontalLevels"],
          "statusValues": ["BULLISH", "BEARISH", "NO_BIAS"],
          "buySignal": "Price near support levels",
          "sellSignal": "Price near resistance levels"
        },
        "volume": {
          "description": "Volume-based indicators for market analysis",
          "indicators": ["vwap", "volumeProfile"],
          "statusValues": ["BULLISH", "BEARISH", "NO_BIAS"],
          "buySignal": "Price above VWAP with high volume",
          "sellSignal": "Price below VWAP with high volume"
        }
      }
    },
    "price-action": {
      "description": "Price action analysis",
      "subcategories": {
        "price-action": {
          "description": "Price action patterns and movements",
          "indicators": ["price-action", "openVsPreviousClose", "closeVsPreviousHigh", "closeVsPreviousLow"],
          "statusValues": ["BULLISH", "BEARISH"],
          "buySignal": "Price action shows bullish patterns",
          "sellSignal": "Price action shows bearish patterns"
        }
      }
    }
  },
  "indicators": {
    "sma": {
      "type": "trend",
      "periods": [20, 50, 89, 200],
      "strengthThreshold": 0.02,
      "description": "Simple Moving Average - trend direction indicator",
      "configurable": {
        "bullishThreshold": "Price > SMA",
        "bearishThreshold": "Price < SMA",
        "neutralThreshold": "Price within 0.5% of SMA"
      }
    },
    "rsi": {
      "type": "oscillators",
      "periods": [14, 21],
      "description": "Relative Strength Index - momentum oscillator",
      "configurable": {
        "overbought": {
          "strong": 80,
          "moderate": 70,
          "weak": 65
        },
        "oversold": {
          "strong": 20,
          "moderate": 30,
          "weak": 35
        },
        "neutral": {
          "upper": 65,
          "lower": 40
        }
      }
    },
    "bollingerBands": {
      "type": "volatility",
      "periods": [20, 50, 89,200],
      "stdDev": 2,
      "description": "Bollinger Bands - volatility and trend indicator",
      "configurable": {
        "overbought": "Price > Upper Band",
        "oversold": "Price < Lower Band",
        "neutral": "Price between bands",
        "squeeze": "Band width < 20% of middle band"
      }
    },
    "atr": {
      "type": "volatility",
      "periods": [1, 5],
      "description": "Average True Range - volatility indicator (primary period vs comparison period)",
      "configurable": {
        "highVolatility": "ATR > 2x comparison period average",
        "lowVolatility": "ATR < 0.5x comparison period average",
        "normalVolatility": "ATR between 0.5x and 2x comparison period average"
      }
    },
    "priceAction": {
      "type": "trend",
      "description": "Price action patterns and levels",
      "configurable": {
        "bullish": "Higher highs and higher lows",
        "bearish": "Lower highs and lower lows",
        "consolidation": "Sideways price action"
      }
    },
    "openVsPreviousClose": {
      "type": "trend",
      "description": "Open vs Previous Close comparison",
      "configurable": {
        "bullish": "Open > Previous Close",
        "bearish": "Open < Previous Close",
        "neutral": "Open = Previous Close"
      }
    },
    "closeVsPreviousHigh": {
      "type": "trend", 
      "description": "Close vs Previous High comparison",
      "configurable": {
        "bullish": "Close > Previous High",
        "bearish": "Close < Previous High",
        "neutral": "Close = Previous High"
      }
    },
    "closeVsPreviousLow": {
      "type": "trend", 
      "description": "Close vs Previous Low comparison",
      "configurable": {
        "bullish": "Close > Previous Low",
        "bearish": "Close < Previous Low",
        "neutral": "Close = Previous Low"
      }
    },
    "vwap": {
      "type": "volume",
      "description": "Volume Weighted Average Price - key support/resistance level",
      "configurable": {
        "bullish": "Price > VWAP with above-average volume",
        "bearish": "Price < VWAP with above-average volume",
        "neutral": "Price near VWAP or low volume",
        "volumeThreshold": 1.2,
        "lookbackPeriod": 10
      }
    },
    "volumeProfile": {
      "type": "volume",
      "description": "Volume Profile - identifies high-volume price levels",
      "configurable": {
        "poc": "Point of Control - highest volume price level",
        "valueArea": "70% of volume within price range",
        "bullish": "Price above POC with volume confirmation",
        "bearish": "Price below POC with volume confirmation",
        "neutral": "Price at POC or low volume areas",
        "lookbackPeriod": 20
      }
    },
    "mmlOvershoot": {
      "type": "volatility",
      "description": "Murrey Math Lines - Overshoot resistance levels (TradingView-style)",
      "configurable": {
        "frame": 64,
        "multiplier": 1.5,
        "extremeOvershoot": "+2/8 and +3/8 levels (Imminent Bearish reversal)",
        "overshoot": "+1/8 level (Overshoot conditions)",
        "lookbackPeriod": 96,
        "ignoreWicks": true,
        "showHistoricalLevels": false
      }
    },
    "mmlOversold": {
      "type": "volatility",
      "description": "Murrey Math Lines - Oversold support levels (TradingView-style)", 
      "configurable": {
        "frame": 64,
        "multiplier": 1.5,
        "extremeOversold": "-2/8 and -3/8 levels (Imminent Bullish reversal)",
        "oversold": "-1/8 level (Oversold conditions)",
        "lookbackPeriod": 96,
        "ignoreWicks": true,
        "showHistoricalLevels": false
      }
    },
    "swingHighLow": {
      "type": "support-resistance",
      "description": "Swing High/Low Detection - identifies local peaks and troughs using pivot-based algorithm",
      "configurable": {
        "leftLength": 4,
        "rightLength": 2,
        "minSwingStrength": 0.01,
        "usePivotDetection": true,
